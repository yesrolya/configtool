<Window x:Class="ConfigTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="440">
    <Grid>
        <StackPanel Orientation="Vertical" Margin ="10">
			<StackPanel Margin ="0,5,0,5" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock x:Name="InputBox"  Width="300" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Input" VerticalAlignment="Center"/>
                <Button x:Name="InputButton"  Width="100" Click="InputButton_Click">Input Location</Button>
            </StackPanel>
			<StackPanel Margin ="0,5,0,5" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock x:Name="OutputBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Output" VerticalAlignment="Center" Width="300"/>
                <Button x:Name="OutputButton" Width="100" Click="OutputButton_Click">Output Location</Button>
            </StackPanel>
			<Button x:Name="LevelsButton" Width="100" Click="LevelsButton_Click" Content="Ну давай, жги"/>

		</StackPanel>
    </Grid>
</Window>
